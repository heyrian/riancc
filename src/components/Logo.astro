---
import config from "@config/config.json";
import { Image } from "astro:assets";
import { localizePath } from "astro-i18next";

const { src, srcDarkmode, className }: { src?: string; srcDarkmode?: string; className?: string } =
  Astro.props;
const {
  logo,
  logo_darkmode,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_darkmode: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const { theme_switcher }: { theme_switcher: boolean } = config.settings;
---

<a href={localizePath("/")} class={`navbar-brand inline-block ${className}`}>
  {
    src || srcDarkmode || logo || logo_darkmode ? (
      <>
      <img src={src ? src : logo} class="inline-block h-mlogo w-mlogo md:h-logo md:w-logo" alt={title} format="webp">
        {theme_switcher && (
      <img src={srcDarkmode ? srcDarkmode : logo_darkmode} class="hidden dark:inline-block h-mlogo w-mlogo md:h-logo md:w-logo" alt={title} format="webp">
        )}
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
